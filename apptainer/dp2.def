Bootstrap: docker
From: nvcr.io/nvidia/pytorch:22.08-py3

%labels
    Author "Mr (via GPT)"
    Purpose "deep_privacy2 environment"
    Base "nvcr.io/nvidia/pytorch:22.08-py3"

%help
    Apptainer image providing the deep_privacy2 environment.
    Runtime env to set (optional):
      - WANDB_API_KEY
      - BASE_DATASET_DIR
      - BASE_OUTPUT_DIR
      - FBA_METRICS_CACHE
    Example:
      apptainer exec --nv --env WANDB_API_KEY=xxxxx dp2.sif python your_script.py

%environment
    export DEBIAN_FRONTEND=noninteractive
    # Keep TORCH cache under the calling user's home (host bind)
    export TORCH_HOME="${HOME}/.cache"
    # Forward WANDB key if provided at runtime
    export WANDB_API_KEY="${WANDB_API_KEY}"

    # OPTIONAL: uncomment and set at runtime or here
    # export BASE_DATASET_DIR=/work/haakohu/datasets
    # export BASE_OUTPUT_DIR=/work/haakohu/outputs
    # export FBA_METRICS_CACHE=/work/haakohu/metrics_cache

%post
    set -eux

    export DEBIAN_FRONTEND=noninteractive

    # Essentials
    apt-get update
    apt-get install -y --no-install-recommends \
        git ffmpeg libsm6 libxext6 qt5-default \
        build-essential pkg-config curl ca-certificates
    rm -rf /var/lib/apt/lists/*

    # Python packages (match Dockerfile pins)
    # Detectron2 DensePose (specific commit)
    pip install --no-cache-dir \
        'git+https://github.com/facebookresearch/detectron2@96c752ce821a3340e27edd51c28a00665dd32a30#subdirectory=projects/DensePose'

    # Core deps
    pip install --no-cache-dir \
        "numpy>=1.20" \
        matplotlib \
        cython \
        tensorboard \
        tqdm \
        ninja==1.10.2 \
        opencv-python-headless==4.5.5.64 \
        ftfy==6.1.3 \
        moviepy \
        pyspng \
        "git+https://github.com/hukkelas/DSFD-Pytorch-Inference" \
        wandb \
        termcolor \
        "git+https://github.com/hukkelas/torch_ops.git" \
        "git+https://github.com/wmuron/motpy@c77f85d27e371c0a298e9a88ca99292d9b9cbe6b" \
        fast_pytorch_kmeans \
        einops_exts \
        einops \
        regex \
        setuptools==59.5.0 \
        resize_right==0.0.2 \
        pillow \
        scipy==1.7.1 \
        webdataset==0.2.26 \
        scikit-image \
        timm==0.6.7

    # CLIP + torch_fidelity (no-deps as in Dockerfile)
    pip install --no-cache-dir --no-deps \
        torch_fidelity==0.3.0 \
        "clip @ git+https://github.com/openai/CLIP.git@b46f5ac7587d2e1862f8b7b1573179d80dcdd620"



%runscript
    # Default: drop into bash with env ready; pass commands to run scripts directly
    exec /bin/bash -lc "$@"
